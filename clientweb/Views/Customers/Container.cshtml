@model IEnumerable<clientweb.ModelData.Container>
@{
    ViewBag.Title = "Tra cứu Container"; 
    Layout = "~/Views/Shared/_layouteport.cshtml";
}

    <div class="card">
        <h5 class="card-header">
            Trang Chủ <i class="icon-long-arrow-right" aria-hidden="true"></i> Container
        </h5>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Kế hoạch
                        </th>
                        <th>
                            Booking
                        </th>
                        <th>
                            Container
                        </th>
                        <th>
                            Tình trạng
                        </th>
                        <th>
                            #
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var q in Model)
                    {
                        <tr>
                            <td>
                                @q.Booking.PlanDate.Value.ToString("dd-MM-yyyy")
                            </td>
                            <td>
                                @q.Booking.BookingNo
                            </td>
                            <td class="contno">
                                @q.ContainerNo
                            </td>
                            <td>
                                @if (q.IsTransported == true)
                                {
                                    <span class="badge badge-success">Đang chạy</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Đang điều xe</span>
                                }
                            </td>
                            <td>
                                <a href="javascript:" class="btn btn-xs btn-info btnViewBill" ContainerID="@q.ContainerID">Xem hóa đơn</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



    <div class="modal fade" id="ViewInvoice" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="ViewInvoice" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Hóa đơn - Container <span class="xcont"></span></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="hdContainerID"/>
                    <div id="viewbill">

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    @*<button type="button" class="btn btn-primary">Understood</button>*@
                </div>
            </div>
        </div>
    </div>